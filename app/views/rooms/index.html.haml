= render partial: 'layouts/header'



.main
  - if user_signed_in?
    = link_to "ログアウト", destroy_user_session_path, method: 'delete', class: "menu-bar__right__text"
  - else
    = link_to "ログイン", new_user_session_path, class: "menu-bar__right__text"
    = link_to "新規登録", new_user_registration_path, class: "menu-bar__right__text"
  = link_to "登録画面へ", rooms_new_path, class: "main__Large-frame__frame__box"
  = link_to "レシピ作成", recipes_path, class: "header-box__recipe"

  .main__Large-frame
    %ul.main__Large-frame__frame
      - @rooms.each do |room|
        = link_to room_path(room), class: "main__Large-frame__frame__box", method: :get do
          %li.main__Large-frame__frame__box__li.lesson-hover
            = room.lodging_id
            %p.text-contents 
              = room.name
            %p.text-contents 
              = room.time
            %p.text-contents 
              = room.phone
            %p.text-contents 
              = room.people
            .text-contents
              = room.meal
