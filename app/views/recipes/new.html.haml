= render partial: 'layouts/header'

.main-text
  .main-text__box
    = form_for (@recipe) do |form|
      = form.text_field :title, placeholder: :タイトル, class: :form__title
      = form.text_area :recipe, placeholder: :レシピを書いてください, class: "form__text", size: "110x30"
      = form.label :image, class: 'form__image' do
        = icon('fas', 'image', class: 'icon')
        = form.file_field :image, class: 'hidden'
      = form.label :video, class: 'form__video' do
        = icon('fas', 'video', class: 'icon')
        = form.file_field :video, class: 'hidden'
      = form.submit '投稿する', class: 'form__submit'